<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="ckfinder" namespace="/ckfinder" extends="default">
		<!-- 返回所有评论 -->
		<action name="ckfinder" class="ckfinderAction" method="ckfinder">
			<result name="success">/ui/ckfinder/ckfinder.jsp</result>	
		</action>
		<!-- 回复评论 -->
		<action name="reply" class="ckfinderAction" method="reply">
			<result name="success">/WEB-INF/pages/feedback/feedback_edit.jsp</result>
		</action>
	</package>
</struts>