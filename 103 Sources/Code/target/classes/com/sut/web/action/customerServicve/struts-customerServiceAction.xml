<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="customerService" namespace="/customerService" extends="default">
		<!-- 返回所有评论 -->
		<action name="serviceList" class="customerServiceAction" method="serviceList">
			<result name="success">/WEB-INF/pages/customerService/service_list.jsp</result>	
		</action>
		<!-- 回复评论 -->
		<action name="serviceDetail" class="customerServiceAction" method="serviceDetail">
			<result name="success">/WEB-INF/pages/customerService/service_detail.jsp</result>
		</action>
	</package>
</struts>